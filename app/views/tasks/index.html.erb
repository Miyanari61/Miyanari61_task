<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>

<table>
  

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        
        <td><%= link_to task.title, task %></td>
        <td><%= link_to '変更', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

